<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>CP-MMS</display-name>
    <!--Servlets-->
    <!--Servlet Mapping -->
    <!--Welcome Files-->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>controllers.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InboxServlet</servlet-name>
        <servlet-class>controllers.InboxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OutboxServlet</servlet-name>
        <servlet-class>controllers.OutboxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>controllers.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OccupationServlet</servlet-name>
        <servlet-class>controllers.OccupationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controllers.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityServlet</servlet-name>
        <servlet-class>controllers.ActivityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoleServlet</servlet-name>
        <servlet-class>controllers.RoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InboxServlet</servlet-name>
        <url-pattern>/Mails/Inbox</url-pattern>
        <url-pattern>/Mails/Inbox/101</url-pattern>
        <url-pattern>/Mails/Inbox/102</url-pattern>
        <url-pattern>/Mails/Inbox/103</url-pattern>
        <url-pattern>/Mails/Inbox/104</url-pattern>
        <url-pattern>/Mails/Inbox/105</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OutboxServlet</servlet-name>
        <url-pattern>/Mails/Outbox</url-pattern>
        <url-pattern>/Mails/Outbox/Mail</url-pattern>
        <url-pattern>/Mails/Outbox/New</url-pattern>
        <url-pattern>/Mails/Outbox/Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/Categories</url-pattern>
        <url-pattern>/Categories/Category/New</url-pattern>
        <url-pattern>/Categories/Category/Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OccupationServlet</servlet-name>
        <url-pattern>/Occupations</url-pattern>
        <url-pattern>/Occupations/Occupation/New</url-pattern>
        <url-pattern>/Occupations/Occupation/Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/Users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/Activities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoleServlet</servlet-name>
        <url-pattern>/Roles</url-pattern>
        <url-pattern>/Roles/Role/New</url-pattern>
        <url-pattern>/Roles/Role/Update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Mails/Inbox</welcome-file>
    </welcome-file-list>
<!--        <error-page>
        <location>/Mails/Inbox</location>
    </error-page>-->
</web-app>
